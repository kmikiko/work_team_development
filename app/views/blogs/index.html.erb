<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>画像</th>
    <th>タイトル</th>
    <th>内容</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @blogs.each do |blog| %>
    <tr>
      <td><%= image_tag blog.photo.image_url(:thumb) if blog.photo.present? %></td>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= link_to '詳細', blog_path(blog.id) %></td>
      <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
      <td><%= link_to '削除', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'} %></td>
    </tr>
  <% end %>
</table>
